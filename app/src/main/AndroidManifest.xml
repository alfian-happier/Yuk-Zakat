<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="app.alfian.yukzakat">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".YukZakatApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.YukZakat"
        tools:targetApi="31"
        android:hardwareAccelerated="true">

        <activity android:name=".ui.main.view.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.main.view.login.LoginActivity"/>
        <activity android:name=".ui.main.view.register.RegisterActivity"/>
        <activity android:name=".ui.main.view.home.HomeActivity"/>
        <activity android:name=".ui.main.view.editprofile.EditProfileActivity"/>
        <activity android:name=".ui.main.view.changepassword.ChangePasswordActivity"/>
        <activity android:name=".ui.main.view.zakat.ZakatActivity"/>
        <activity android:name=".ui.main.view.detailtransaction.DetailTransactionActivity"/>
        <activity android:name=".ui.main.view.calculator.CalculatorActivity"/>

        <activity
            android:name="com.canhub.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat"/>
    </application>

</manifest>